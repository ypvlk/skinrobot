{% extends './layout.html.twig' %}

{% block title %}Charts | Crypto Bot{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="/css/ticker_chart.css?v={{ asset_version() }}">
{% endblock %}

{% block content %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Ticker Results</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ '/' }}">Dashboard</a></li>
                            <li class="breadcrumb-item active">Ticker  </li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.Content Header (Page header) -->

        <!-- Main content -->
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <strong>Filters</strong>
                                <form method="get">
                                    <ul class="list-inline">
                                        <li class="list-inline-item">Pairs:</li>
                                            <li class="list-inline-item">
                                                <div class="form-check">
                                                    <input type="checkbox" class="form-check-input" name="exclude_levels[]" value="{{ level }}" id="level_{{ key }}" onChange="this.form.submit()" {% if level in form.excludeLevels %}checked{% endif %}>
                                                    <label class="form-check-label" for="level_{{ key }}">{{ level }}</label>
                                                </div>
                                            </li>
                                    </ul>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">Reverse:</li>
                                            <li class="list-inline-item">
                                                <div class="form-check">
                                                    <input type="checkbox" class="form-check-input" name="reverse[]" value="bid/ask" id="reverse">
                                                    <label class="form-check-label" for="reverse"></label>
                                                </div>
                                            </li>
                                    </ul>
                                </form>
                            </div>
                            <!-- /.card-header -->

                            <div class="card-body table-responsive p-0">
                                <div id="chart" class="chart" data-tickers="{{ tickers|e('html') }}" data-title="title - espend.de"></div>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->

                    </div>
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
{% endblock %}

{% block javascript %}
    {# <script>
        function handleClickReverse(cb) {
            console.log('handleClickReverse', cb.checked);
        }
    </script> #}
    <script src="https://unpkg.com/lightweight-charts/dist/lightweight-charts.standalone.production.js"></script>
    <script src="/js/candles_chart.js?v={{ asset_version() }}"></script>
{% endblock %}
