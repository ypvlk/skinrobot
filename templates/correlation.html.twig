{% extends './layout.html.twig' %}

{% block title %}Correlation | Crypto Bot{% endblock %}

{% block stylesheet %}
    <!-- Multiplay select -->
    <link rel="stylesheet" href="{{ '/plugins/chosen_v1/chosen.min.css' }}">
{% endblock stylesheet %}

{% block content %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper" id="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Correlation</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ '/' }}">Dashboard</a></li>
                            <li class="breadcrumb-item active">Correlation</li>
                        </ol>
                    </div>
                </div>
            </div>
            <!-- /.container-fluid -->
        </section>
        <!-- /.Content Header (Page header) -->

        <!-- Main content -->
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <strong>Pairs:</strong>
                                <form action="/correlation.json" role="form" id="filter-form">
                                    <ul class="list-inline">
                                        <select id="pairs" data-placeholder="Choose a pairs" name="pairs" multiple style="width: 400px;">
                                            {% for ticker in tickers %}
                                                <option value={{ ticker }}>{{ ticker }}</option>
                                            {% endfor %}
                                        </select>
                                        <button type="submit" class="btn btn-default btn-sm">Submit</button>
                                    </ul>
                                </form>
                            </div>
                            <!-- /.card-header -->

                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="table-responsive p-2">
                                                    <table class="table table-bordered table-sm text-center">
                                                        <thead id="table-changes-head">
                                                            <tr>
                                                                <th colspan="6" scope="col">Changes</th>
                                                            </tr>
                                                            <tr>
                                                                <th scope="col">Ticker</th>
                                                                <th scope="col">1 year %</th>
                                                                <th scope="col">1 month %</th>
                                                                <th scope="col">1 week %</th>
                                                                <th scope="col">3 days %</th>
                                                                <th scope="col">today %</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody id="table-changes-body">
                                                            
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="table-responsive p-2">
                                                    <table class="table table-bordered table-sm text-center">
                                                        <thead id="table-beta-median-head">
                                                            <tr>
                                                                <th colspan="7" scope="col">Beta (median)</th>
                                                            </tr>
                                                            <tr>
                                                                <th colspan="1" scope="col"></th>
                                                                <th colspan="3" scope="col">Long</th>
                                                                <th colspan="3" scope="col">Short</th>
                                                            </tr>
                                                            <tr>
                                                                <th scope="col">Ticker</th>
                                                                <th scope="col">1 year</th>
                                                                <th scope="col">1 month</th>
                                                                <th scope="col">1 week</th>
                                                                <th scope="col">1 year</th>
                                                                <th scope="col">1 month</th>
                                                                <th scope="col">1 week</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody id="table-beta-median-body">
                                                            <tr>
                                                                <td scope="col">BTC</td>
                                                                <td scope="col">1</td>
                                                                <td scope="col">1</td>
                                                                <td scope="col">1</td>
                                                                <td scope="col">1</td>
                                                                <td scope="col">1</td>
                                                                <td scope="col">1</td>
                                                            </tr>
                                                            <tr>
                                                                <td scope="col">ETH</td>
                                                                <td scope="col">1</td>
                                                                <td scope="col">1</td>
                                                                <td scope="col">1</td>
                                                                <td scope="col">1</td>
                                                                <td scope="col">1</td>
                                                                <td scope="col">1</td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="table-responsive p-2">
                                                    <table class="table table-bordered table-sm text-center">
                                                        <thead id="table-filter-head">Table Head</thead>
                                                        <tbody id="table-filter-body">Table Body</tbody>
                                                    </table>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="table-responsive p-2">
                                                    <table class="table table-bordered table-sm text-center">
                                                        <thead id="table-filter-head">Table Head</thead>
                                                        <tbody id="table-filter-body">Table Body</tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="table-responsive p-2">
                                                    <table class="table table-bordered table-sm text-center">
                                                        <thead id="table-filter-head">Table Head</thead>
                                                        <tbody id="table-filter-body">Table Body</tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-body -->
                        </div>
                    </div>
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
{% endblock %}

{% block javascript %}
    <script src="/plugins/chosen_v1/chosen.jquery.min.js"></script>
    <script src="/js/correlation.js?v={{ asset_version() }}"></script>
{% endblock %}