{% extends '../layout.html.twig' %}

{% block title %}Dashboard | Crypto Bot{% endblock %}

{% block content %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Dashboard</h1>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.Content Header (Page header) -->

        <!-- Main content -->
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-header">
                                        <h3 class="card-title">Summary </span></h3>
                                    </div>
                                    <!-- /.card-header -->
                                    <div class="card-body">
                                        {% include './summary.html.twig' %}
                                    </div>
                                    <!-- /.card-body -->
                                </div>
                                <!-- /.card -->
                            </div>
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-header">
                                        <h3 class="card-title">Trades </span></h3>
                                    </div>
                                    <!-- /.card-header -->
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-4">
                                                {% include './pairs_list.html.twig' %}
                                            </div>
                                            <div class="col-md-8">
                                                {% include './market_maker.html.twig' %}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                {% include './positions.html.twig' %}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                {% include './orders.html.twig' %}
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.card-body -->
                                </div>
                                <!-- /.card -->
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content -->
    </div>
{% endblock content %}

{% block javascript %}
<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>

<script src="/js/dashboard.js?v={{ asset_version() }}"></script>
{% endblock javascript %}